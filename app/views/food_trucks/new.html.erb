<%= form_for @foodtruck do |f| %>
<br>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :category %>
<%= f.text_field :category %>
<br>
<%= f.label :phone %>
<%= f.text_field :phone %>
<br>
<%= f.label :current_location %>
<%= f.text_field :current_location %>
<br>
<%= f.hidden_field :user_id, :value => current_user.id %>

<%= f.submit %>
<% end %>